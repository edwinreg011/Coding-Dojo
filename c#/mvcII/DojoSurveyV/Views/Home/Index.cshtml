@{
    ViewData["Title"] = "Home Page";
}
@model DojoSurveyV.Models.Survey

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dojo Survey</title>
</head>
<body>
    <div id = "container">

        <div asp-validation-summary="All"></div>
        
        <form asp-action="Process" asp-controlle="Home">
            <label asp-for="Name"></label>
            <input asp-for="Name">
            <br>
            <br>
            <label asp-for="Location"></label>
            <select asp-for="Location">
                <option value="">--</option>
                <option value="Chicago">Chicago</option>
                <option value="Tulsa">Tulsa</option>
                <option value="Seattle">Seattle</option>
                <option value="San Jose">San Jose</option>
                <option value="Dallas">Dallas</option>
            </select>
            <br>
            <br>
            <label asp-for="Language"></label>
            <select asp-for="Language">
                <option value="">--</option>
                <option value="C">C</option>
                <option value="JavaScript">JavaScript</option>
                <option value="Python">Python</option>
                <option value="Ruby">Ruby</option>
                <option value="HTML">HTML</option>
            </select>
            <br>
            <br>
            <label asp-for="Comments"></label>
            <br>
            <br>
            <textarea asp-for="Comments" cols="30" rows="10"></textarea>
            <br>
            <br>
            <input type="submit" value="Submit">
        </form>
    </div>
</body>
</html>
