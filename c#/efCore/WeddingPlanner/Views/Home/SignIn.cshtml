@{
    ViewData["Title"] = "Home Page";
}
@model LoginUser

<h1>Login</h1>

<a asp-action="Index" asp-controller="Home" class="btn btn-danger">Register</a>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="LogIn" asp-controller="Home" method = "post">
  <label asp-for="LoginEmail"></label>
  <input asp-for="LoginEmail">
  <br>
  <br>
  <label asp-for="LoginPassword"></label>
  <input asp-for="LoginPassword">
  <br>
  <br>
  <input type="submit" value="Log in" class="btn btn-warning">
</form>