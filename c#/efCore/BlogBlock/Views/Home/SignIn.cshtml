@{
    ViewData["Title"] = "Home Page";
}
@model LoginUser

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <h1>BlogBlock</h1>
        <a asp-action="Index" asp-controller="Home" class="btn btn-warning">Create an account</a>
    </div>
</nav>


<div asp-validation-summary="All" class="text-danger"></div>

<form  asp-action="LogIn" asp-controller="Home" method = "post" class="text-center border border-light p-5" >

    <p class="h4 mb-4">Sign In</p>


    <!-- Email -->
    <label for="exampleInputEmail1" asp-for="LoginEmail">Email Address</label>
    <input asp-for="LoginEmail" type="email" id="defaultLoginFormEmail" class="form-control mb-4" placeholder="Enter email">

    <!-- Password -->
    <label asp-for="LoginPassword" for="exampleInputPassword1">Password</label>
    <input asp-for="LoginPassword" type="password" id="defaultLoginFormPassword" class="form-control mb-4" placeholder="Password">


    <!-- Sign in button -->
    <button class="btn btn-success btn-block my-4" type="submit">Sign in</button>


</form>