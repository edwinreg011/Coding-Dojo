@model Transaction

<h1>Welcome, @ViewBag.User.FirstName!</h1>

<a asp-action="LogOut" asp-controller="Home" class="btn btn-danger">Logout</a>

<h2>Current Balance: @ViewBag.Balance</h2>

<form asp-action="Process" asp-controller="Bank" method = "post">
  <label asp-for="Amount">Deposit/Withdraw</label>
  <br>
  <input asp-for="Amount">
  <br>
  <br>
  <input type="submit" value="Submit" class="btn btn-warning">
</form>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      @foreach(var t in @ViewBag.User.MyTransactions)
      {
        <tr>
          <td>@t.Amount</td>
          <td>@t.CreatedAt.ToString("MMMM, dd yyyy")</td>
        </tr>
      }
    </tr>
  </tbody>
</table>