@{
    ViewData["Title"] = "Home Page";
}

@model Product


<h1><a asp-action="AllProducts">Products</a> | <a asp-action="AllCategories">Categories</a></h1>

<br>
<br>

<h3>New Product</h3>
<div asp-validation-summary="All"></div>
<br>

<form asp-action="CreateProd" asp-controller="Home" method="post">
  <label asp-for="Name">Name:</label>
  <input asp-for="Name">
  <br>
  <label asp-for="Description">Description</label>
  <input asp-for="Description">
  <br>
  <label asp-for="Price">Price</label>
  <input asp-for="Price">
  <br>
  <br>
  <input type="submit" value="Create" class="btn btn-success">
</form>



<br>
<br>


<h3>Existing Products</h3>
  <ul>
    @{
      foreach(var prod in @ViewBag.Products)
      {
      <a asp-action="DispProd" asp-controller="Home" asp-route-prod_id="@prod.ProductId"><li>@prod.Name</li></a>
      }
    }
  </ul>