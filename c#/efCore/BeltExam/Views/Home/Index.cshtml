@{
    ViewData["Title"] = "Home Page";
}
@model User


<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <h1 >Register</h1>
        <a asp-action="SignIn" asp-controller = "Home" class="btn btn-warning">Already have an account?</a>
    </div>
</nav>





<div asp-validation-summary="All" class="text-danger"></div>


<form asp-action="Register" asp-controller = "Home" method = "post" class="text-center border border-light p-5">

    <p class="h4 mb-4">Sign up</p>

    <div class="form-row mb-4">
        <div class="col">
            <!-- First name -->
            <input asp-for="FirstName" type="text" id="defaultRegisterFormFirstName" class="form-control" placeholder="First name">
        </div>
        <div class="col">
            <!-- Last name -->
            <input asp-for="LastName" type="text" id="defaultRegisterFormLastName" class="form-control" placeholder="Last name">
        </div>
    </div>

    <!-- E-mail -->
    <input asp-for="Email" type="email" id="defaultRegisterFormEmail" class="form-control mb-4" placeholder="E-mail">

    <!-- Password -->
    <input asp-for="Password" type="password" id="defaultRegisterFormPassword" class="form-control" placeholder="Password" aria-describedby="defaultRegisterFormPasswordHelpBlock">

    <br>

    <input asp-for="ComparePassword" type="password" id="defaultRegisterFormPassword" class="form-control" placeholder="Confirm Password" aria-describedby="defaultRegisterFormPasswordHelpBlock">


    <!-- Sign up button -->
    <button class="btn btn-success my-4 btn-block" type="submit">Sign in</button>

    <hr>

</form>
<!-- Default form register -->